<a href="/add" class="btn btn-primary" type="submit">去添加</a>
<ul class="list-group">
  {{#each document}}
    <li class="list-group-item">
        <h3>{{title}}</h3>
        <div>{{details}}</div>
        <a href="/add/{{_id}}" class="btn btn-dark">编辑</a>
        <form method="POST" action="/add/{{_id}}?_method=DELETE">
          <input type="hidden" name="method" value="DELETE" />
          <input type="submit" class="btn btn-danger" value="删除" />
        </form>
       </li>
  {{else}}
    <p>没有内容</p>
  {{/each}}
